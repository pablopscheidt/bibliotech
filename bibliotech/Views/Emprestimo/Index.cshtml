@model IEnumerable<bibliotech.Models.Emprestimo>

@{
    ViewData["Title"] = "Lista de Empréstimos";
}

<h1>Lista de Empréstimos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Livro</th>
            <th>Usuário</th>
            <th>Data de Empréstimo</th>
            <th>Data de Devolução</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Livro != null ? item.Livro.Titulo : "Livro não encontrado")</td>
                    <td>@(item.Usuario != null ? item.Usuario.Nome : "Usuário não encontrado")</td>
                    <td>@item.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                    <td>@(item.DataDevolucao.HasValue ? item.DataDevolucao.Value.ToString("dd/MM/yyyy") : "Não devolvido")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Nenhum empréstimo encontrado.</td>
            </tr>
        }
    </tbody>
</table>
