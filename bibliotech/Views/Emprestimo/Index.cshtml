@model IEnumerable<bibliotech.Models.Emprestimo>

@{
    ViewData["Title"] = "Lista de Empréstimos";
}

<h1>Lista de Empréstimos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Empréstimo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Livro</th>
            <th>Data Empréstimo</th>
            <th>Data Devolução</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Usuario.Nome</td>
                <td>@item.Livro.Titulo</td>
                <td>@item.DataEmprestimo.ToShortDateString()</td>
                <td>@(item.DataDevolucao.HasValue ? item.DataDevolucao.Value.ToShortDateString() : "Não devolvido")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
