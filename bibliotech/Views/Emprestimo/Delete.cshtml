@model bibliotech.Models.Emprestimo

<h2>Confirmar Exclusão</h2>

<p>Tem certeza que deseja excluir o empréstimo?</p>

<div>
    <h4>Detalhes do Empréstimo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Livro</dt>
        <dd>@(Model.Livro != null ? Model.Livro.Titulo : "Livro não encontrado")</dd>

        <dt>Usuário</dt>
        <dd>@(Model.Usuario != null ? Model.Usuario.Nome : "Usuário não encontrado")</dd>

        <dt>Data de Empréstimo</dt>
        <dd>@Model.DataEmprestimo.ToString("dd/MM/yyyy")</dd>

        <dt>Data de Devolução</dt>
        <dd>@(Model.DataDevolucao.HasValue ? Model.DataDevolucao.Value.ToString("dd/MM/yyyy") : "Não devolvido")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ID" method="post">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
