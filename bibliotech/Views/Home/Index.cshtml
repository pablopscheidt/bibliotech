@{
    ViewData["Title"] = "Página Inicial";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Bem-vindo à Bibliotech</h1>
    <p class="lead">Bem-vindo ao sistema de gerenciamento da Biblioteca. Utilize os links abaixo para navegar pelas funcionalidades do sistema:</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <i class="fas fa-book fa-3x mb-3"></i>
                    <h5 class="card-title">Livros</h5>
                    <p class="card-text">Gerenciar Livros</p>
                    <a asp-controller="Livro" asp-action="Index" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Usuários</h5>
                    <p class="card-text">Gerenciar Usuários</p>
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <i class="fas fa-exchange-alt fa-3x mb-3"></i>
                    <h5 class="card-title">Empréstimos</h5>
                    <p class="card-text">Gerenciar Empréstimos</p>
                    <a asp-controller="Emprestimo" asp-action="Index" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</div>
